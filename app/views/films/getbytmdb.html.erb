<p id="notice"><%= notice %></p>

  <!-- First Band (Image) -->

  <div class="row">
    <div class="large-12 columns">
      <%= image_tag("#{@configuration.base_url}w1280#{@tmdb_film.backdrop_path}", :class => 'headerimage') if @tmdb_film.backdrop_path  %>
    </div>
  </div>  
  <div class="row summary">
    <div class="large-3 columns">
      <%= image_tag("#{@configuration.base_url}w154#{@tmdb_film.poster_path}") if @tmdb_film.poster_path %>
    </div>
    <div class="large-9 columns">
    	<h1><%= @tmdb_film.title %></h1>
    	<h4>Directed By</h4>
      <h5> <%= @director.name %></h5>
    	<p><%= @tmdb_film.overview %></p>
    </div>
  </div>
</p>

